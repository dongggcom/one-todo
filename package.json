{
  "name": "one-todo",
  "version": "0.1.0",
  "description": "a vscode plugin about todo list",
  "main": "src/extension.js",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dongggcom/one-todo.git"
  },
  "keywords": [
    "vscode",
    "plugin",
    "todo"
  ],
  "icon": "images/one-todo@128x128.png",
  "author": "dongggcom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dongggcom/one-todo/issues"
  },
  "homepage": "https://github.com/dongggcom/one-todo#readme",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "one-todo插件设置",
      "properties": {
        "oneTodo.showHomepage": {
          "type": "boolean",
          "default": true,
          "description": "是否启动时显示首页"
        },
        "oneTodo.makeTodoFile": {
          "type": "boolean",
          "default": false,
          "description": "是否生成TODO文件"
        },
        "oneTodo.include": {
          "description": "包含文件",
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.jsx",
            "**/*.ts",
            "**/*.tsx",
            "**/*.html",
            "**/*.php",
            "**/*.css",
            "**/*.scss"
          ],
          "items": {
            "anyOf": [
              {
                "type": "string",
                "description": "按照glob定义包含文件，禁止使用 `**/*.*` 或匹配二进制文件"
              }
            ]
        }
        },
        "oneTodo.exclude": {
          "description": "排除文件",
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/bower_components/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.github/**",
            "**/_output/**",
            "**/*.min.*",
            "**/*.map",
            "**/.next/**"
          ],
          "items": {
            "anyOf": [
              {
                "type": "string",
                "description": "按照glob定义排除文件"
              }
            ]
          }
        },
        "oneTodo.maxFilesForSearch": {
          "type": "number",
          "default": 5120,
          "description": "最大查询行数"
        }
      }
    },
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "one-todo: hello!"
      },
      {
        "command": "extension.main.showHomepage",
        "title": "one-todo: 显示首页"
      },
      {
        "command": "extension.main.showAllAnnotations",
        "title": "one-todo: 显示全部注解"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "one-todo-icon",
          "title": "TODO",
          "icon": "images/one-todo.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "extension.sayHello",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "one-todo-icon": [
        {
          "id": "todo",
          "name": "TODO列表"
        },
        {
          "id": "un-todo",
          "name": "UN-TODO列表"
        },
        {
          "id": "other",
          "name": "其他"
        }
      ]
    }
  }
}
